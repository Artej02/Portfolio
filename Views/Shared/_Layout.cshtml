	<script>
    let scrollToBottom = document.querySelector("#contact")
    let pageBottom = document.querySelector("#contact-section")

    scrollToBottom.addEventListener("click", function() {
      pageBottom.scrollIntoView()
    })


	function submitMessage(){
		let objectToPost = {
			name: $("#nameField").val(),
			username: $("#emailField").val(),
			msg: $("#messageField").val()
		}

		if($("#nameField").val() == null || $("#nameField").val() == "" || $("#emailField").val() == null || $("#emailField").val() == "" || $("#messageField").val() == null || $("#messageField").val() == ""){
			Swal.fire('Please fill in all fields')
			return false;
		}

	$.ajax({
            type: "POST",
            url: '@Url.Action("Email","Home")',
            data: objectToPost,
            success: function (data) {
                if (!data.HasError) {
                    Swal.fire('Message sent successfully.')
					$("#nameField").val('');
					$("#emailField").val('');
					$("#messageField").val('');
                }
                else {
                   Swal.fire('Something went wrong!')
                }
            }
    })
	}

    </script>

